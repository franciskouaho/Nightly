rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Fonction helper pour vérifier si l'utilisateur est admin
    function isAdmin() {
      return request.auth != null && 
        request.auth.token.admin == true;
    }
    
    // Fonction helper pour vérifier la propriété
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Règles pour les utilisateurs - SIMPLIFIÉ
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && isOwner(userId);
      allow update: if request.auth != null && isOwner(userId);
      allow delete: if isAdmin() || isOwner(userId);
    }
    
    // Règles pour les pseudos/usernames
    match /usernames/{username} {
      allow read: if true; // Permettre la vérification de disponibilité
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Règles pour les salles de jeu - SIMPLIFIÉ
    match /rooms/{roomId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Règles pour les jeux actifs - SIMPLIFIÉ
    match /games/{gameId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Règles pour les questions de jeu
    match /questions/{gameType}/{questionId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Règles pour les traductions
    match /translations/{language}/{translationId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Règles pour les statistiques
    match /stats/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isOwner(userId);
      allow delete: if isAdmin() || isOwner(userId);
    }
    
    // Règles pour les classements
    match /leaderboards/{gameType} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Règles pour les événements
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Règles pour les notifications
    match /notifications/{userId}/{notificationId} {
      allow read: if request.auth != null && isOwner(userId);
      allow create: if request.auth != null;
      allow update: if request.auth != null && isOwner(userId);
      allow delete: if request.auth != null && isOwner(userId);
    }
    
    // Règles pour les rapports de bug
    match /reports/{reportId} {
      allow read: if isAdmin();
      allow create: if request.auth != null;
      allow update: if false;
      allow delete: if isAdmin();
    }
    
    // Règles pour les configurations de jeu
    match /gameConfig/{gameType} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Règles pour les sessions de jeu temporaires
    match /gameSessions/{sessionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Règles pour les logs de debug
    match /debug/{userId}/{logId} {
      allow read, write, delete: if request.auth != null && isOwner(userId);
    }
    
    // Règles pour les achats/transactions
    match /purchases/{userId}/{purchaseId} {
      allow read: if request.auth != null && isOwner(userId);
      allow create: if request.auth != null && isOwner(userId);
      allow update: if false;
      allow delete: if isAdmin();
    }
    
    // Règles pour les amis/relations
    match /friends/{userId} {
      allow read: if request.auth != null && isOwner(userId);
      allow write: if request.auth != null && isOwner(userId);
      allow delete: if request.auth != null && isOwner(userId);
    }

    // Règles pour les assets (avatars, etc.)
    match /assets/{assetId} {
      allow read: if request.auth != null; // Tous les utilisateurs connectés peuvent voir les assets
      allow write: if false; // Seuls les admins via console Firebase peuvent écrire
    }

    // Règles pour les assets débloqués par les utilisateurs
    match /unlockedAssets/{userId} {
      allow read: if request.auth != null && (isOwner(userId) || isAdmin());
      allow write: if request.auth != null && isOwner(userId);
      allow delete: if isAdmin() || isOwner(userId);
    }

    // Règles par défaut - Autoriser la lecture si connecté (temporaire)
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}
